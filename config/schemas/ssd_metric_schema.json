{
  "title": "ssd metric schema",
  "type": "object",
  "required": [
      "threshold_mode",
      "ssd_threshold",
      "up_sample_threshold",
      "scale",
      "debug"
  ],
  "properties": {
    "threshold_mode": {"type": "integer", "enum": [1,2]},
    "ssd_threshold": {"type": "number", "minimum": 0},
    "up_sample_threshold": {"type": "number", "minimum": 0},
    "scale": {"type":"array",
              "additionalItems": {"type": "number", "minimum": 0},
              "minItems": 3,
              "maxItems": 3
    },
    "debug": {"type": "boolean"}
  }
}